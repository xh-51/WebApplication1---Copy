@model WebApplication1.Models.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password - Ace Job Agency";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card card-gothic overflow-hidden">
                <div class="card-header-gothic text-center">
                    <h2 class="mb-0 font-display">Forgot Password</h2>
                    <p class="small mb-0 mt-1 text-muted">Ace Job Agency</p>
                </div>
                <div class="card-body p-4">
                    <p class="text-muted small">Enter your email and we'll send you a link to reset your password.</p>

                    <form asp-action="ForgotPassword" method="post">
                        @Html.AntiForgeryToken()
                        @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
                        {
                            <div asp-validation-summary="All" class="alert alert-gothic-danger mb-4"></div>
                        }

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label form-label-gothic"></label>
                            <input asp-for="Email" class="form-control form-control-gothic" type="email" placeholder="you@example.com" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-gothic-primary btn-lg rounded-2 py-2">Send Reset Link</button>
                        </div>
                    </form>

                    <div class="mt-4 pt-3 border-top border-secondary text-center">
                        <a asp-action="Login" class="link-gothic text-decoration-none">Back to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
