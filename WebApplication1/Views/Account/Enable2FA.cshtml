@{
    ViewData["Title"] = "Enable Two-Factor Authentication";
    var authenticatorKey = ViewBag.AuthenticatorKey as string;
    var qrCodeUri = ViewBag.QrCodeUri as string;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="text-center">Enable Two-Factor Authentication</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <strong>How it works:</strong>
                        <ol class="mb-0 mt-2">
                            <li>Scan the QR code with an authenticator app (Google Authenticator, Microsoft Authenticator, etc.)</li>
                            <li>Enter the 6-digit code from the app to verify</li>
                            <li>2FA will be enabled for your account</li>
                        </ol>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h5>Step 1: Scan QR Code</h5>
                            @if (!string.IsNullOrEmpty(qrCodeUri))
                            {
                                <div class="mb-3">
                                    <img src="https://api.qrserver.com/v1/create-qr-code/?size=200x200&data=@Uri.EscapeDataString(qrCodeUri)" alt="QR Code" class="img-fluid" />
                                </div>
                            }

                            <h5>Step 2: Manual Entry Key</h5>
                            <div class="alert alert-secondary">
                                <strong>Key:</strong> <code>@authenticatorKey</code>
                                <button class="btn btn-sm btn-outline-secondary ms-2" onclick="copyToClipboard('@authenticatorKey')">Copy</button>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <h5>Step 3: Verify Code</h5>
                            <form asp-action="Enable2FA" method="post">
                                <div asp-validation-summary="All" class="text-danger"></div>

                                <div class="mb-3">
                                    <label for="verificationCode" class="form-label">Enter 6-digit code from your authenticator app</label>
                                    <input type="text" name="verificationCode" id="verificationCode" class="form-control" maxlength="6" pattern="[0-9]{6}" required />
                                </div>

                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary btn-lg">Enable 2FA</button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <div class="mt-4 text-center">
                        <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function copyToClipboard(text) {
        navigator.clipboard.writeText(text).then(function() {
            alert('Key copied to clipboard!');
        });
    }
</script>
