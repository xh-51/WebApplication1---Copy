@{
    ViewData["Title"] = "Password Reset Link Sent";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h2 class="text-center">Reset Link Sent</h2>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    @if (TempData["ResetLink"] != null)
                    {
                        <div class="alert alert-info">
                            <strong>Demo Reset Link:</strong><br>
                            <a href="@TempData["ResetLink"]" target="_blank">@TempData["ResetLink"]</a>
                            <small class="d-block mt-2">(In production, this would be sent via email)</small>
                        </div>
                    }

                    <p>Please check your email for the password reset link.</p>
                    <p>If you don't receive an email, please check your spam folder.</p>

                    <div class="mt-3 text-center">
                        <a asp-action="Login" class="btn btn-primary">Back to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
