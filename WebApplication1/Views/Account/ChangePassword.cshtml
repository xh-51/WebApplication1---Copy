@model WebApplication1.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="text-center">Change Password</h2>
                </div>
                <div class="card-body">
                    @if (TempData["PasswordExpired"] != null)
                    {
                        <div class="alert alert-danger">
                            <strong>Password Expired:</strong> @TempData["PasswordExpired"]
                        </div>
                    }
                    @if (TempData["PasswordWarning"] != null)
                    {
                        <div class="alert alert-warning">
                            <strong>Warning:</strong> @TempData["PasswordWarning"]
                        </div>
                    }

                    <form asp-action="ChangePassword" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="CurrentPassword" class="form-label"></label>
                            <input asp-for="CurrentPassword" class="form-control" />
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label"></label>
                            <input asp-for="NewPassword" class="form-control" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                            <small class="form-text text-muted">Min 12 chars: uppercase, lowercase, number, special char. Cannot reuse last 2 passwords.</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmNewPassword" class="form-label"></label>
                            <input asp-for="ConfirmNewPassword" class="form-control" />
                            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                        </div>

                        <div class="alert alert-info">
                            <strong>Password Policy:</strong>
                            <ul class="mb-0 mt-2">
                                <li>Cannot change password within 5 minutes of last change</li>
                                <li>Cannot reuse last 2 passwords</li>
                                <li>Password expires after 90 days</li>
                            </ul>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Change Password</button>
                        </div>
                    </form>

                    <div class="mt-3 text-center">
                        <a asp-action="Index" asp-controller="Home">Back to Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
