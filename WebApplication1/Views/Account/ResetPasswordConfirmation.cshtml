@{
    ViewData["Title"] = "Password Reset";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card card-gothic overflow-hidden">
                <div class="card-header-gothic text-center">
                    <h2 class="mb-0 font-display">Password has been reset</h2>
                </div>
                <div class="card-body p-4">
                    <p class="text-light mb-0">Your password has been reset successfully. You can now sign in with your new password.</p>
                    <div class="mt-4 text-center">
                        <a asp-action="Login" class="btn btn-gothic-primary">Sign in</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
